<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto">

    
    <!--Botão clicavel que serve paea salvar os itens-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>

    </ContentPage.ToolbarItems>
    
    <!--Itens da pagina, texo e campo de entrada-->
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Descrição do Produto:"/>
        <Entry x:Name="txt_descricao"/>

        <Label Text="Quantidade:"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>
            
        <Label Text="Preço Unitártio:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>

        <!--Novo campo para preencher a data-->
        <Label Text="Data da Compra:"/>
        <DatePicker x:Name="datePickerData"
            Date="{x:Static sys:DateTime.Today}"
            Format="dd/MM/yyyy"/>


    </VerticalStackLayout>
</ContentPage>